{
    "apiVersion": "argoproj.io/v1alpha1",
    "kind": "Workflow",
    "metadata": {
        "generateName": "build-image-and-push-deep-mnist-"
    },
    "spec": {
        "arguments": {
            "parameters": [
                {
                    "name": "model-version",
                    "value": "%MODEL_VERSION%"
                },
                {
                    "name": "github-user",
                    "value": "%GITHUB_USER%"
                },
                {
                    "name": "github-token",
                    "value": "%GITHUB_TOKEN%"
                },
                {
                    "name": "build-image-enabled",
                    "value": "false"
                },
                {
                    "name": "update-manifest-enabled",
                    "value": "false"
                }
            ]
        },
        "entrypoint": "build-steps",
        "templates": [
            {
                "name": "build-steps",
                "steps": [
                    [
                        {
                            "arguments": {
                                "parameters": [
                                    {
                                        "name": "cmdargs",
                                        "value": "until docker ps; do sleep 3; done; set -x && cd /work/model-source-files/models/deep-mnist && make MODEL_VERSION={{workflow.parameters.model-version}} build_model_image && docker images && docker images | grep deep-mnist && make MODEL_VERSION={{workflow.parameters.model-version}} push_to_registry"
                                    }
                                ]
                            },
                            "name": "build-image",
                            "template": "image-builder",
                            "when": "{{workflow.parameters.build-image-enabled}} == true"
                        }
                    ],
                    [
                        {
                            "arguments": {
                                "parameters": [
                                    {
                                        "name": "cmdargs",
                                        "value": "set -x && cd /work/k8s-manifest-files && make -f Makefile.ci update_model_manifest MODEL_VERSION={{workflow.parameters.model-version}} && git status -s && git config user.email gsunner2000@gmail.com && git commit --allow-empty -m 'auto version update ({{workflow.parameters.model-version}})' demo-manifests/model.json && git push"
                                    }
                                ]
                            },
                            "name": "update-manifest",
                            "template": "manifest-updater",
                            "when": "{{workflow.parameters.update-manifest-enabled}} == true"
                        }
                    ]
                ]
            },
            {
                "container": {
                    "args": [
                        "{{inputs.parameters.cmdargs}}"
                    ],
                    "command": [
                        "sh",
                        "-c"
                    ],
                    "image": "gsunner/s2i-tools:0.1",
                    "volumeMounts": [
                        {
                            "mountPath": "/var/run/docker.sock",
                            "name": "docker-sock-volume"
                        }
                    ]
                },
                "inputs": {
                    "artifacts": [
                        {
                            "git": {
                                "repo": "https://{{workflow.parameters.github-user}}:{{workflow.parameters.github-token}}@github.com/{{workflow.parameters.github-user}}/cicd-demo-model-source-files.git",
                                "revision": "master"
                            },
                            "name": "model-source-files",
                            "path": "/work/model-source-files"
                        }
                    ],
                    "parameters": [
                        {
                            "name": "cmdargs"
                        }
                    ]
                },
                "name": "image-builder"
            },
            {
                "container": {
                    "args": [
                        "{{inputs.parameters.cmdargs}}"
                    ],
                    "command": [
                        "sh",
                        "-c"
                    ],
                    "image": "seldonio/k8s-deployer:k8s_v1.9.0"
                },
                "inputs": {
                    "artifacts": [
                        {
                            "git": {
                                "repo": "https://{{workflow.parameters.github-user}}:{{workflow.parameters.github-token}}@github.com/{{workflow.parameters.github-user}}/cicd-demo-k8s-manifest-files.git",
                                "revision": "master"
                            },
                            "name": "k8s-manifest-files",
                            "path": "/work/k8s-manifest-files"
                        }
                    ],
                    "parameters": [
                        {
                            "name": "cmdargs"
                        }
                    ]
                },
                "name": "manifest-updater"
            }
        ],
        "volumes": [
            {
                "hostPath": {
                    "path": "/var/run/docker.sock",
                    "type": "File"
                },
                "name": "docker-sock-volume"
            }
        ]
    }
}
